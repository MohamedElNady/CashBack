@model Cash_Back.Models.ViewModel.ForgetPassword
<head>
    <link href="~/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" /> 

    <link href="~/css/loginn.css"  rel="stylesheet" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<section class="container">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="~/loginform.png" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <h5 style="padding-bottom:20px; white-space: pre-line;" class="block text-center">
              We Will Send You Email To Change Your Password
		  </h5>
        <form method="post" asp-action="ForgetPassword" asp-controller="Account">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        
          <!-- Email input -->
          <div class="form-floating  mb-3">
            <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example13">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>


          <!-- Submit button -->
          <button type="submit" id="changetext" class="btn btn-primary btn-lg btn-block">Send Email</button>

         
          </form> 
      </div>
    </div>
  </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" /> 
    <script src="~/limonte-sweetalert2/sweetalert2.js"></script>  
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
