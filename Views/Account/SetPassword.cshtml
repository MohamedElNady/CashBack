@model Cash_Back.Models.ViewModel.SetLocalPassword
<head>
    <link href="~/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" /> 

    <link href="~/css/loginn.css"  rel="stylesheet" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<section class="container">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="~/loginform.png" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <h5 style="padding-bottom:20px; white-space: pre-line;" class="block text-center">You have used extrernal account to login in and don't have local password to use our application,Simply set your password to 
              login in your account anytime without your external account by using your Email& Password
		  </h5>
        <form method="post" asp-action="SetPassword" asp-controller="Account">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

          <!-- Email input -->
          <div class="form-floating  mb-3">
            <input asp-for="NewPassword" type="password" id="form1Example13" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example13">New Password</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-floating  mb-3">
            <input asp-for="ConfirmPassword" type="password" id="form1Example23" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example23">Confirm Password</label>
             <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

          </div>

          <!-- Submit button -->
          <button type="submit" id="changetext" class="btn btn-primary btn-lg btn-block">Set Password</button>

         
          </form> 
      </div>
    </div>
  </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" /> 
    <script src="~/limonte-sweetalert2/sweetalert2.js"></script>  
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script>
        var swlValue ="@((string)ViewBag.PasswordSetBag)";
        if(swlValue!==null&&swlValue!=='')
        {
           new swal("Welcome To CASH BACK","Please Set Your Password", "success");
            
        }
	</script>
  
        }
